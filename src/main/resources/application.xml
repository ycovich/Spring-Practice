<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:http="http://www.springframework.org/schema/context"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans.xsd
       http://www.springframework.org/schema/context
       http://www.springframework.org/schema/context/spring-context-4.0.xsd">

<!--    <bean class="org.springframework.context.support.PropertySourcesPlaceholderConfigurer">-->
<!--        <property name="location" value="application.properties"/>-->
<!--    </bean>-->

    <context:component-scan base-package="by.ycovich"/>
    <context:property-placeholder location = "classpath:application.properties"/>
    <bean class="org.springframework.context.annotation.CommonAnnotationBeanPostProcessor"/>


    <bean id="repo1" name="r1, r2`" class="by.ycovich.repository.UserRepository">
        <constructor-arg name="username" value="ycovich"/>
        <constructor-arg name="age" value="20"/>
        <constructor-arg name="cars">
            <list>
                <value>Porsche 911</value>
                <value>Range Rover</value>
                <ref bean="ford"/> <!-- setting a bean as some field to another bean -->
            </list>
        </constructor-arg>
        <constructor-arg name="info">
            <map>
                <entry key="status" value="married"/>
                <entry key="citizenship" value="USA"/>
            </map>
        </constructor-arg>
    </bean>

    <bean id="repo2" class="by.ycovich.repository.UserRepository">
        <property name="username" value="paul atreides"/>
        <property name="age" value="17"/>
        <property name="cars" value="Ornithopter"/>
        <property name="info">
            <map>
                <entry key="status" value="single"/>
                <entry key="citizenship" value="Caladan"/>
            </map>
        </property>
    </bean>

    <bean name="ford" class="java.lang.String">
        <constructor-arg value="Ford Mustang"/>
    </bean>

    <bean class="by.ycovich.service.UserService">
        <constructor-arg name="userMapper" ref="mapper"/>
        <constructor-arg name="userRepository" ref="repo1"/>
    </bean>

    <bean name="mapper" class="by.ycovich.mapper.UserMapper">
        <constructor-arg name="userDTO" ref="dto"/>
    </bean>

    <bean name="dto" class="by.ycovich.dto.UserDTO" scope="prototype"/>


</beans>